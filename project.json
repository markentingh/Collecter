{
  "title": "Collector Email Template Builder",
  "version": "0.1.0-alpha",
  "authors": [ "Mark Entingh" ],
  "description": "Collector is a simple email template builder",
  "projectUrl": "http://www.github.com/Collector/Home",

  "webroot": "wwwroot",

  "commands": {
    "web": "Microsoft.AspNet.Server.Kestrel --server.urls http://localhost:5001"
  },

  "frameworks": {
    "dnxcore50": {
      "dependencies": {
        "Microsoft.AspNet.IISPlatformHandler": "1.0.0-beta8",
        "Microsoft.AspNet.Hosting": "1.0.0-beta8",
        "Microsoft.AspNet.Server.Kestrel": "1.0.0-beta8",
        "Microsoft.AspNet.StaticFiles": "1.0.0-beta8",
        "Microsoft.AspNet.Diagnostics": "1.0.0-beta8",
        "Microsoft.AspNet.Session": "1.0.0-beta8", 
        "Microsoft.Framework.Configuration": "1.0.0-beta8",
        "Microsoft.Framework.OptionsModel": "1.0.0-beta8",
        "Microsoft.Framework.Caching.Memory": "1.0.0-beta8",
        "System.Console": "4.0.0-beta-23019",
        "System.Runtime": "4.0.21-beta-23225",
        "System.Runtime.Extensions": "4.0.11-beta-23225",
        "System.Collections": "4.0.11-beta-23225",
        "System.Linq": "4.0.1-beta-23225",
        "System.IO": "4.0.11-beta-23225",
        "System.Data.Common": "4.0.1-beta-23225",
        "System.Data.SqlClient": "4.0.0-beta-23123",
        "System.Xml.ReaderWriter": "4.0.11-beta-23225",
        "System.Xml.XmlDocument": "4.0.1-beta-23225",
        "System.Xml.XmlSerializer": "4.0.11-beta-23225",
        "System.Runtime.Serialization.Xml": "4.0.11-beta-23225",
        "Newtonsoft.Json": "7.0.1"

      }
    }
  },


  "compile": [
    "*.cs",
    "App/**/*.cs",
    "Components/**/*.cs",
    "Pipeline/**/*.cs",
    "Services/**/*.cs",
    "Utility/**/*.cs"
  ],

  "compileExclude": [
    "wwwroot",
    "Sql"
  ],

  "publishExclude": [
    "node_modules",
    "bower_components",
    "**.xproj",
    "**.user",
    "**.vspscc",
    "Sql"
  ],

  "exclude": [
    "node_modules",
    "bower_components"
  ]
}
